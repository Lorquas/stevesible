# {{ ansible_managed }}
# Ensures that daemon running Mesos slave daemon for cluster '{{ mesos_cluster_name }}' is monitored.

check process mesos-{{ safe_mesos_cluster_name }}-slave with pidfile /var/run/mesos/{{ safe_mesos_cluster_name }}/slave.pid
  if failed port {{ mesos_slave_port }} type tcp for {{ failure_cycles_before_restart }} cycles then restart
  start program = "/usr/bin/mesos-{{ safe_mesos_cluster_name }} slave start"
  stop program = "/usr/bin/mesos-{{ safe_mesos_cluster_name }} slave stop"
